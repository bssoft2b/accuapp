                    </div>
                    <div class="col-sm-3">
                        <label for="lblLastName" class="col-form-label">Last name:</label>
                        <label class="form-control" id="lblLastName" />
                    </div>
                    <div class="col-sm-3">
                        <label for="lblAddress1" class="col-form-label">Address1:</label>
                        <label class="form-control" id="lblAddress1" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label for="lblAddress2" class="col-form-label">Address2:</label>
                        <label class="form-control" id="lblAddress2" />
                    </div>
                    <div class="col-sm-3">
                        <label for="lblCity" class="col-form-label">City:</label>
                        <label class="form-control" id="lblCity" />
                    </div>
                    <div class="col-sm-3">
                        <label for="lblState" class="col-form-label">State:</label>
                        <label class="form-control" id="lblState" />
                    </div>

                    <div class="col-sm-3">
                        <label for="lblZip" class="col-form-label">ZIP:</label>
                        <label class="form-control" id="lblZip" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label for="lblTelephone" class="col-form-label">Telephone:</label>
                        <label class="form-control" id="lblTelephone" />
                    </div>
                    <div class="col-sm-3">
                        <label for="lblTerminationDate" class="col-form-label">Termination Date:</label>
                        <label class="form-control" id="lblTerminationDate" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <table id="PhlebotomistsDetails" class="table table-striped table-bordered dataTable">
                            <thead>
                                <tr>
                                    <th>AccountID</th>
                                    <th>GroupID</th>
                                    <th>PhlebotomistAssignmentID</th>
                                    <th>PhlebotomistAssignmentLineID</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody >
                                
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>AccountID</th>
                                    <th>GroupID</th>
                                    <th>PhlebotomistAssignmentID</th>
                                    <th>PhlebotomistAssignmentLineID</th>
                                    <th>Percentage</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END details form-->
