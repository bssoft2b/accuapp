@{
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}
<style>
    #tblTasks th {
        vertical-align: top;
        text-align: center;
        background-color: blue;
        color: white;
    }
</style>
<!--edit form-->
<div class="modal fade" id="editDispatchTask" tabindex="-1" role="dialog" aria-labelledby="editDispatchTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDispatchTaskModalLabel">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="txtAccountID" class="col-form-label">AccountID:</label>
                            <input type="text" class="form-control" id="txtAccountID" readonly>
                            <input type="hidden" class="form-control" id="txtDispatchTaskID">
                        </div>
                        <div class="col-sm-4">
                            <label for="txtAddressLine1" class="col-form-label">Address line 1:</label>
                            <input type="text" class="form-control" id="txtAddressLine1" readonly>
                        </div>
                        <div class="col-sm-4">
                            <label for="txtAddressLine2" class="col-form-label">Address line 2:</label>
                            <input type="text" class="form-control" id="txtAddressLine2" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="txtCity" class="col-form-label">City:</label>
                            <input type="text" class="form-control" id="txtCity" required>
                        </div>
                        <div class="col-sm-4">
                            <label for="txtState" class="col-form-label">State:</label>
                            <input type="text" class="form-control" id="txtState">
                        </div>
                        <div class="col-sm-4">
                            <label for="txtZip" class="col-form-label">Zip:</label>
                            <input type="text" class="form-control" id="txtZip" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="lstCallReason" class="col-form-label">Call reason:</label>
                            <select type="text" class="form-control" id="lstCallReason">
                                <option value="1">Pick Up</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label for="txtDriver" class="col-form-label">Driver:</label>
                            <input type="text" class="form-control" id="txtDriver" required>
                        </div>
                        <div class="col-sm-4">
                            <label for="txtPickupTime" class="col-form-label">Pickup time:</label>
                            <input type="text" class="form-control" id="txtPickupTime" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="chkStat" class="col-form-label">Stat:</label>
                            <input type="checkbox" class="form-control" id="chkStat" required>
                        </div>
                        <div class="col-sm-4">
                            <label for="lstDispatchStatusID" class="col-form-label">Dispatch status:</label>
                            <select type="text" class="form-control" id="lstDispatchStatusID"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 border">
                            <label for="lstDispatchContactEmail" class="col-form-label" >Dispatch contact email:</label>
                            <ul type="text" class="form-control" id="lstDispatchContactEmail" style="list-style-type: none;height:auto!important;"></ul>
                            <button type="button" id="btnAddDispatchContactEmail" class="btn btn-secondary">Add</button>
                             <button type="button" id="btnRemoveDispatchContactEmail" class="btn btn-secondary">Remove</button>
                        </div>
                        <div class="col-sm-8">
                            <label for="txtNotes" class="col-form-label">Notes:</label>
                            <textarea type="text" class="form-control" id="txtNotes" style="height:250px"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnOk" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<!--END edit form-->
