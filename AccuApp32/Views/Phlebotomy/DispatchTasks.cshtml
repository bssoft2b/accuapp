@{
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}
<style>
    #tblTasks th {
        vertical-align: top;
        text-align: center;
        background-color: blue;
        color: white;
    }
    .ui-datepicker {
      z-index: 1600 !important; /* has to be larger than 1050 */
    }
</style>
<!--edit form-->
<div class="modal fade" id="editDispatchTask" tabindex="-1" role="dialog" aria-labelledby="editDispatchTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editDispatchTaskModalLabel">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ui-front">
                <form id="frmDispatchTask">
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="txtAccountID" class="col-form-label">AccountID:</label>
                            <input type="text" class="form-control" id="txtAccountID" name="txtAccountID" autocomplete="off">
                            <input type="hidden" class="form-control" id="txtDispatchTaskID">
                        </div>
                        <div class="col-sm-4">
                            <label for="txtAddressLine1" class="col-form-label">Address line 1:</label>
                            <input type="text" class="form-control" id="txtAddressLine1" name="txtAddressLine1" >
                        </div>
                        <div class="col-sm-4">
                            <label for="txtAddressLine2" class="col-form-label">Address line 2:</label>
                            <input type="text" class="form-control" id="txtAddressLine2" name="txtAddressLine2" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="txtCity" class="col-form-label">City:</label>
                            <input type="text" class="form-control" id="txtCity" name="txtCity" >
                        </div>
                        <div class="col-sm-4">
                            <label for="txtState" class="col-form-label">State:</label>
                            <input type="text" class="form-control" id="txtState" name="txtState">
                        </div>
                        <div class="col-sm-4">
                            <label for="txtZip" class="col-form-label">Zip:</label>
                            <input type="text" class="form-control" id="txtZip" name="txtZip" >
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="lstCallReason" class="col-form-label">Call reason:</label>
                            <select type="text" class="form-control" id="lstCallReason" name="lstCallReason" >
                                <option value="1">Pick Up</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label for="txtDriver" class="col-form-label">Driver:</label>
                            <input type="text" class="form-control" id="txtDriver" name="txtDriver" >
                        </div>
                        <div class="col-sm-4">
                            <label for="txtPickupTime" class="col-form-label">Pickup time:</label>
                            <input type="text" class="form-control" id="txtPickupTime" name="txtPickupTime">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="chkStat" class="col-form-label">Stat:</label>
                            <input type="checkbox" id="chkStat" name="chkStat" >
                        </div>
                        <div class="col-sm-4">
                            <label for="lstDispatchStatusID" class="col-form-label">Dispatch status:</label>
                            <select type="text" class="form-control" id="lstDispatchStatusID" name="lstDispatchStatusID">
                                <option value="1" selected>1 - New</option>
                                <option value="2">2 - Assigned</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4 border">
                            <label for="lstDispatchContactEmail" class="col-form-label" >Dispatch contact email:</label>
                            <ul type="text" class="form-control" id="lstDispatchContactEmail" name="lstDispatchContactEmail" style="list-style-type: none;height:auto!important;"></ul>
                            <button type="button" id="btnAddDispatchContactEmail" class="btn btn-secondary">Add</button>
                             <button type="button" id="btnRemoveDispatchContactEmail" class="btn btn-secondary">Remove</button>
                        </div>
                        <div class="col-sm-8">
                            <label for="txtNotes" class="col-form-label">Notes:</label>
                            <textarea type="text" class="form-control" id="txtNotes" name="txtNotes" style="height:250px"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-close" data-dismiss="modal">Close</button>
                <button type="button" id="btnOk" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<!--END edit form-->
<br/>
<button id="btnCreate" class="btn btn-secondary">Create new</button>
<br/>
<br/>
<!--Dispatch tasks-->
<select id="selectDispatchStatus" class="form-control col-sm-2">
    <option value="1">All</option>
    <option value="2" selected>New</option>
    <option value="3">Assigned</option>
</select>
<br/>
<table id="tblTasks" class="table table-striped table-bordered dataTable">
    <thead>
        <tr>
            <th>DispatchStatus</th>
            <th>DispatchTaskId</th>
            <th>AccountID</th>
            <th>Name</th>
            <th>Telephone</th>
            <th>Stat</th>
            <th>Reason</th>
            <th>Driver</th>
            <th>PickupTime</th>
            <th>LastWorked</th>
            <th>CreatedBy</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>DispatchStatus</th>
            <th>DispatchTaskId</th>
            <th>AccountID</th>
            <th>Name</th>
            <th>Telephone</th>
            <th>Stat</th>
            <th>Reason</th>
            <th>Driver</th>
            <th>PickupTime</th>
            <th>LastWorked</th>
            <th>CreatedBy</th>
            <th></th>
            <th></th>
        </tr>
    </tfoot>
</table>
<!--end dispatch tasks-->
<script src="~/Phlebotomy/dispatchtask.js">
</script>