@model List<WebDB.Notification>
@{
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}

<br />
<style>
    td {
        border:1px solid black;
        padding:2px;
    }
</style>
<div class="modal fade" id="editNotificationModal" tabindex="-1" role="dialog" aria-labelledby="editNotificationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editNotificationModalLabel">Edit notification</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
              <input type="hidden" id="notificationIdModal"/>
            <label for="recipient-name" class="col-form-label">Recipient:</label>
            <input type="text" class="form-control" id="txtNotificationNameModal">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Description:</label>
            <textarea class="form-control" id="txtNotificationDescriptionModal"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary submit">Ok</button>
      </div>
    </div>
  </div>
</div>

<table id="tblNotificationList" style="border:1px solid black">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var n in Model){
        <tr>
            <td class="notify-name">@n.Name</td>
            <td class="notify-description">@n.Description</td>
            <td><button type="button" class="btn notification-edit" data-toggle="modal" data-target="#editNotificationModal" notificationId="@n.NotificationId">Edit</button></td>
            <td><button type="button" class="btn notification-delete" notificationId="@n.NotificationId">Delete</button></td>
        </tr>
        }
        <tr>
            <td colspan="4">
                <input type="email" id="txtNotificationName" name="txtNotificationName"  placeholder="enter notification codename..."/>
                <input type="text" id="txtNotificationDescription" name="txtNotificationDescription" placeholder="enter description of notification" />
                <button id="btnAddNotification">Add notification</button>
            </td>
        </tr>
    </tbody>
</table>
