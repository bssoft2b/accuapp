@model List<WebDB.ServiceEmail>
@{
    Layout = "~/Views/Shared/_LayoutAdminLte.cshtml";
}

<br />
<style>
    td {
        border:1px solid black;
        padding:2px;
    }
</style>
<div class="modal fade" id="editServiceEmailModal" tabindex="-1" role="dialog" aria-labelledby="editServiceEmailModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editServiceEmailModalLabel">Edit/Add Email</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
              <input type="hidden" id="serviceEmailModal"/>
            <label for="message-text" class="col-form-label">Description:</label>
            <textarea class="form-control" id="txtServiceEmailDescriptionModal"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary submit">Ok</button>
      </div>
    </div>
  </div>
</div>

<table id="tblServiceEmailList" style="border:1px solid black">
    <thead>
        <tr>
            <td>Email</td>
            <td>Description</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var n in Model){
        <tr>
            <td class="serviceemail-name">@n.Email</td>
            <td class="serviceemail-description">@n.Description</td>
            <td><button type="button" class="btn serviceemail-edit" data-toggle="modal" data-target="#editServiceEmailModal" email="@n.Email">Edit</button></td>
            <td><button type="button" class="btn serviceemail-delete" email="@n.Email">Delete</button></td>
        </tr>
        }
        <tr>
            <td colspan="4">
                <input type="email" id="txtServiceEmail" name="txtServiceEmail"  placeholder="enter service email..."/>
                <input type="text" id="txtServiceEmailDescription" name="txtServiceEmailDescription" placeholder="enter description of service email" />
                <button id="btnAddServiceEmail">Add service email</button>
            </td>
        </tr>
    </tbody>
</table>
